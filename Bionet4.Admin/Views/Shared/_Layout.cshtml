@using Bionet4.Data.Properties
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.AppName</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink(Resources.Dashboard, "Index", "Home")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @Resources.Elements
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink(Resources.Agents, "Index", "Agents")</li>
                            <li>@Html.ActionLink(Resources.AlbumDetails, "Index", "AlbumDetails")</li>
                            <li>@Html.ActionLink(Resources.Albums, "Index", "Albums")</li>
                            <li>@Html.ActionLink(Resources.Applications, "Index", "Applications")</li>
                            <li>@Html.ActionLink(Resources.Article, "Index", "Article")</li>
                            <li>@Html.ActionLink(Resources.BottomBanners, "Index", "BottomBanners")</li>
                            <li>@Html.ActionLink(Resources.Certificates, "Index", "Certificates")</li>
                            <li>@Html.ActionLink(Resources.Events, "Index", "Events")</li>
                            <li>@Html.ActionLink(Resources.FAQ, "Index", "FAQ")</li>
                            <li>@Html.ActionLink(Resources.Ingredients, "Index", "Ingredients")</li>
                            <li>@Html.ActionLink(Resources.Logos, "Index", "Logos")</li>
                            <li>@Html.ActionLink(Resources.OrderItems, "Index", "OrderItems")</li>
                            <li>@Html.ActionLink(Resources.Orders, "Index", "Orders")</li>
                            <li>@Html.ActionLink(Resources.Categories, "Index", "Categories")</li>
                            <li>@Html.ActionLink(Resources.Products, "Index", "Products")</li>
                            <li>@Html.ActionLink(Resources.ProductsForOrder, "Index", "ProductsForOrder")</li>
                            <li>@Html.ActionLink(Resources.Rajons, "Index", "Rajons")</li>
                            <li>@Html.ActionLink(Resources.Regions, "Index", "Regions")</li>
                            <li>@Html.ActionLink(Resources.Countries, "Index", "Countries")</li>
                            <li>@Html.ActionLink(Resources.Sliders, "Index", "Sliders")</li>
                            <li>@Html.ActionLink(Resources.Units, "Index", "Units")</li>
                            <li>@Html.ActionLink(Resources.Variables, "Index", "Variables")</li>
                            <li>@Html.ActionLink(Resources.Videos, "Index", "Videos")</li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Resources.AppName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", false)

</body>
</html>
