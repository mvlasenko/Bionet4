@using Bionet4.Properties
@using Bionet4.ViewModels
@model RegisterViewModel
<!-- Registration Modal -->
<div class="modal register fade" id="registrationModal" tabindex="-1" role="dialog" aria-labelledby="registrationModal" aria-hidden="true">

    @using (Ajax.BeginForm("RegisterPartial", "Account", null,
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            UpdateTargetId = "registrationModal",
            OnSuccess = "document.location.reload(true);"
        },
        new { @id = "frmModalLogin" }))
        {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="form-signin-heading modal-title" id="registrationModalLabel">@Resources.CreateAccount</h2>
                </div>
                <form method="post" id="registration">
                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = Resources.FirstName, @required = "required" })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", @placeholder = Resources.MiddleName, @required = "required" })
                                    @Html.ValidationMessageFor(m => m.MiddleName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = Resources.LastName, @required = "required" })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.Gender, new { @class = "form-control", @placeholder = Resources.Gender })
                                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "Email", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.PhoneMobile, new { @class = "form-control", @placeholder = Resources.PhoneMobile })
                                    @Html.ValidationMessageFor(m => m.PhoneMobile, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.BirthDate, new { @class = "form-control", @placeholder = Resources.BirthDate })
                                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.CountryId, new { @class = "form-control", @placeholder = Resources.Country })
                                    @Html.ValidationMessageFor(m => m.CountryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.RegionId, new { @class = "form-control", @placeholder = Resources.Region })
                                    @Html.ValidationMessageFor(m => m.RegionId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.RajonId, new { @class = "form-control", @placeholder = Resources.Rajon })
                                    @Html.ValidationMessageFor(m => m.RajonId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = Resources.City })
                                    @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Street, new { @class = "form-control", @placeholder = Resources.Street })
                                    @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.HouseNumber, new { @class = "form-control", @placeholder = Resources.HouseNumber })
                                    @Html.ValidationMessageFor(m => m.HouseNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.HouseNumberAddition, new { @class = "form-control", @placeholder = Resources.HouseNumberAddition })
                                    @Html.ValidationMessageFor(m => m.HouseNumberAddition, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Apartment, new { @class = "form-control", @placeholder = Resources.Apartment })
                                    @Html.ValidationMessageFor(m => m.Apartment, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.PhoneHome, new { @class = "form-control", @placeholder = Resources.PhoneHome })
                                    @Html.ValidationMessageFor(m => m.PhoneHome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = Resources.Password })
                                </div>
                                <div class="col-md-6">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = Resources.ConfirmPassword })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Close</button>
                        <button type="submit" class="btn btn-color">@Resources.Register</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
<!-- /Registration Modal -->