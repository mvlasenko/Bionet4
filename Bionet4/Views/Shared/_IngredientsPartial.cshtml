@using Bionet4.Properties
@using Bionet4.Data.Models
@model ICollection<Ingredient>

<!-- Main Content -->
<div class="content-about margin-top60">
    <div class="container">
        <div class="row padding-top40">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 welcome-three">
                <h2>@Resources.IngredientsTitle</h2>
                <p>
                    @Resources.IngredientsDescription
                </p>
            </div>
        </div>
        <div class="row padding-top40">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                @foreach (Ingredient item in Model)
                {
                <div class="content-box-about ch-item">
                    <div class="content-box-about-icon">
                        <div class="ch-info">
                            <div class="ch-info-front ch-img-1"><i class="fa fa-leaf"></i></div>
                            <div class="ch-info-back">
                                <i class="fa fa-leaf"></i>
                            </div>
                        </div>
                    </div>
                    <div class="content-box-about-info">
                        <h3>@item.Name</h3>
                        <p>
                            @item.Description
                        </p>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- /Main Content -->