@using Bionet4.Properties
@using Bionet4.Data.Models
@model IList<Product>

@if (Model.Count > 0)
{
<!-- Products List-->
<div class="related-product margin-top60 margin-bottom70">
    <div class="container">
        <div class="row">
            <div class="col-md-12 wow fadeIn">
                <div id="product-carousel" class="product-carousel carousel slide">
                    <div class="carousel-inner">
                        @for (int block = 0; block < Model.Count / 4 + 1; block++)
                        {
                        <div class="item@(block == 0 ? " active" : "")">
                            <div class="product-grid">
                                <div class="products-block">
                                    <div class="row product-items">
                                        @for (int i = 0; i < 4; i++)
                                        {
                                            if (block * 4 + i < Model.Count)
                                            {
                                                Product product = Model[block * 4 + i];

                                        <!-- Single Product  -->
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 product-cols@(i == 0 ? " first" : "")@(i == 3 ? " last" : "")">
                                            <div class="product-block">
                                                <div class="image ">
                                                    @if (product.CreatedDateTime.AddDays(30) > DateTime.Now)
                                                    {
                                                    <span class="product-label product-label-special">
                                                        <span>NEW</span>
                                                    </span>
                                                    }
                                                    <!-- Swap image -->
                                                    <div class="flip">
                                                        <a href="/Products/Product/@product.Id" class="swap-image">
                                                            <img src="/Images/Image/@product.ImageID?width=190" title="@product.Name" alt="@product.Name" class="front">
                                                        </a>
                                                    </div>
                                                    <a href="/Products/Product/@product.Id" class="pav-colorbox btn btn-theme-default cboxElement"><em class="fa fa-plus"></em><span>@Resources.ViewProduct</span></a>
                                                </div>
                                                <div class="product-meta">
                                                    <div class="left">
                                                        <h3 class="name"><a href="/Products/Product/@product.Id">@product.Name</a></h3>
                                                        <div class="price">
                                                            <span class="price-old">@(product.Price * 2)</span>
                                                            <span class="price-new">@product.Price</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /Single Product  -->

                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 margin-top15 wow fadeInUp">
                <div class="carousel-controls text-center pull-right">
                    <a id="prev1" class="prev" href="#product-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                    <a id="next1" class="next" href="#product-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Products List-->
}