@using Bionet4.Properties
@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <a href="@Url.Action("Index", "Index")" id="manageLink" title="@Resources.Manage"><i class="fa fa-user"></i> @User.Identity.GetUserName()</a>
        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> @Resources.LogOff</a>
    }
}
else
{
    <a href="@Url.Action("Login", "Account")" id="registerLink"><i class="fa fa-sign-in"></i> @Resources.Login</a>
    <a href="@Url.Action("Register", "Account")" id="loginLink"><i class="fa fa-edit"></i> @Resources.Registration</a>
}